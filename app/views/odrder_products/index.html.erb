<p id="notice"><%= notice %></p>

<h1>Odrder Products</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @odrder_products.each do |odrder_product| %>
      <tr>
        <td><%= odrder_product.product %></td>
        <td><%= odrder_product.order %></td>
        <td><%= link_to 'Show', odrder_product %></td>
        <td><%= link_to 'Edit', edit_odrder_product_path(odrder_product) %></td>
        <td><%= link_to 'Destroy', odrder_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

